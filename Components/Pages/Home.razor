@code {
    private bool hasRenderedAfterLogin = false;
    private bool showLoginForm = false;
    private bool isProcessing = false;
    private string loginError = string.Empty;
    private List<EventRecord> upcomingEvents = new();
    public bool ShowAdminIcon = false;
    private string? email;
    private bool jsInitialized = false;
    private string username = "";
    private string isAuthenticated = "0";

    private LoginModel loginModel = new();

    public class LoginModel
    {
        [Required]
        [EmailAddress]
        public string Email { get; set; } = string.Empty;

        [Required]
        public string Password { get; set; } = string.Empty;
    }

    [Inject] AuthenticationStateProvider AuthStateProvider { get; set; }
    [Inject] private IHttpContextAccessor HttpContextAccessor { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Initialize JS interop first
            await InitializeJsInterop();

            // Get user from session service
            var currentUser = await UserSessionService.GetCurrentUserAsync();
            if (currentUser != null)
            {
                username = $"{currentUser.FirstName} {currentUser.LastName}".Trim();
                isAuthenticated = "1";
            }
            else
            {
                username = "Guest";
                isAuthenticated = "0";
            }

            upcomingEvents = await EventService.GetUpcomingEventsAsync(limit: 2);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in OnInitializedAsync: {ex.Message}");
        }
    }

    private async Task InitializeJsInterop()
    {
        if (!jsInitialized)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("initializeBlazorInterop");
                jsInitialized = true;
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error initializing JS interop: {ex.Message}");
            }
        }
    }

    private void ToggleLoginForm()
    {
        showLoginForm = !showLoginForm;
        if (showLoginForm)
        {
            loginError = string.Empty;
            loginModel = new LoginModel();
        }
    }

    private async Task HandleLogin()
    {
        if (isProcessing) return;

        try
        {
            isProcessing = true;
            loginError = string.Empty;

            // Ensure JS interop is initialized
            await InitializeJsInterop();

            var user = await UserManager.FindByEmailAsync(loginModel.Email);

            if (user != null && await UserManager.CheckPasswordAsync(user, loginModel.Password))
            {
                // Create user session
                var currentUser = new UserModel
                {
                    UserId = user.Id,
                    FirstName = user.FullName.Split(' ').FirstOrDefault() ?? "",
                    LastName = user.FullName.Split(' ').Skip(1).FirstOrDefault() ?? "",
                    Email = user.UserName
                };

                // Set user session first
                await UserSessionService.SetCurrentUserAsync(currentUser);

                // Update local state
                username = user.FullName;
                isAuthenticated = "1";

                // Force reload to reset renderer and JS interop state
              //  Navigation.NavigateTo(Navigation.BaseUri, forceLoad: true);
                Navigation.NavigateTo(Navigation.BaseUri, forceLoad: true);
                return;
            }
            else
            {
                loginError = "Invalid credentials. Please try again.";
                isAuthenticated = "0";
            }
        }
        catch (Exception ex)
        {
            loginError = $"Login error: {ex.Message}";
            isAuthenticated = "0";
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task HandleLogout()
    {
        try
        {
            // Ensure JS interop is initialized
            await InitializeJsInterop();

            // Clear user session
            await UserSessionService.ClearUserSessionAsync();
            
            // Reset local state
            username = "Guest";
            isAuthenticated = "0";
            
            // Force reload to reset renderer and JS interop state
           // Navigation.NavigateTo(Navigation.BaseUri, forceLoad: true);
            Navigation.NavigateTo(Navigation.BaseUri, forceLoad: true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Logout error: {ex.Message}");
        }
    }

    public void Dispose()
    {
        if (jsInitialized)
        {
            try
            {
                JSRuntime.InvokeVoidAsync("cleanupBlazorInterop");
            }
            catch
            {
                // Ignore cleanup errors
            }
        }
    }
}
