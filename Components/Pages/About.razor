@page "/about"
@using BafaMobile.Data
@using BafaMobile.Models
@using BafaMobile.Services
@inject UserSessionService SessionService
@inject IUserSessionService UserSessionService
@inject BafaDbContext DbContext
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@using Microsoft.EntityFrameworkCore

<div class="container py-4">
    <!-- Hero Section -->
    <div class="text-center mb-5">
        <i class="bi bi-building text-primary display-4 mb-3"></i>
        <h4 class="fw-bold mb-2">About NYBAFA</h4>
        <p class="text-muted">Empowering our community through unity, education, and cultural preservation</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Mission Section -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <i class="bi bi-bullseye text-primary fs-4 me-2"></i>
                        <h5 class="card-title fw-bold mb-0">Our Mission</h5>
                    </div>
                    <p class="card-text">
                        The New York Bafa Association (NYBAFA) is dedicated to fostering unity, preserving cultural heritage, 
                        and empowering our community through education, social services, and cultural events. We strive to 
                        create a vibrant and inclusive environment where our traditions thrive and future generations can flourish.
                    </p>
                    <div class="row g-4 mt-3">
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-people-fill text-primary display-6 mb-2"></i>
                                <h6 class="fw-bold mb-1">Unity</h6>
                                <p class="text-muted small mb-0">Bringing our community together</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-book-fill text-primary display-6 mb-2"></i>
                                <h6 class="fw-bold mb-1">Education</h6>
                                <p class="text-muted small mb-0">Empowering through knowledge</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <i class="bi bi-heart-fill text-primary display-6 mb-2"></i>
                                <h6 class="fw-bold mb-1">Culture</h6>
                                <p class="text-muted small mb-0">Preserving our heritage</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- History Section -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <i class="bi bi-clock-history text-primary fs-4 me-2"></i>
                        <h5 class="card-title fw-bold mb-0">Our History</h5>
                    </div>
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <h6 class="fw-bold">2005</h6>
                                <p class="text-muted mb-0">NYBAFA was founded by a group of dedicated community members</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <h6 class="fw-bold">2010</h6>
                                <p class="text-muted mb-0">Established our first cultural center in New York</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <h6 class="fw-bold">2015</h6>
                                <p class="text-muted mb-0">Launched our educational scholarship program</p>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="timeline-marker"></div>
                            <div class="timeline-content">
                                <h6 class="fw-bold">2020</h6>
                                <p class="text-muted mb-0">Expanded our community outreach programs</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Team Section -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <i class="bi bi-people-fill text-primary fs-4 me-2"></i>
                        <h5 class="card-title fw-bold mb-0">Our Leadership</h5>
                    </div>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="bi bi-person-circle text-primary display-4"></i>
                                    </div>
                                    <h6 class="fw-bold mb-1">John Doe</h6>
                                    <p class="text-muted small mb-2">President</p>
                                    <p class="small mb-0">Leading our community with vision and dedication</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="bi bi-person-circle text-primary display-4"></i>
                                    </div>
                                    <h6 class="fw-bold mb-1">Jane Smith</h6>
                                    <p class="text-muted small mb-2">Vice President</p>
                                    <p class="small mb-0">Driving our cultural initiatives forward</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Section -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <i class="bi bi-envelope-fill text-primary fs-4 me-2"></i>
                        <h5 class="card-title fw-bold mb-0">Get in Touch</h5>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center text-muted">
                                <i class="bi bi-geo-alt-fill me-2"></i>
                                <span>123 Community Street, New York, NY 10001</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center text-muted">
                                <i class="bi bi-envelope-fill me-2"></i>
                                <span>contact@nybafa.org</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center text-muted">
                                <i class="bi bi-telephone-fill me-2"></i>
                                <span>(555) 123-4567</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center text-muted">
                                <i class="bi bi-clock-fill me-2"></i>
                                <span>Mon-Fri: 9AM - 5PM</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 1.5rem;
    }

    .timeline-item:last-child {
        padding-bottom: 0;
    }

    .timeline-marker {
        position: absolute;
        left: -30px;
        width: 15px;
        height: 15px;
        border-radius: 50%;
        background: #0d6efd;
        border: 3px solid #fff;
        box-shadow: 0 0 0 2px #0d6efd;
    }

    .timeline-item:not(:last-child)::before {
        content: '';
        position: absolute;
        left: -23px;
        top: 15px;
        height: calc(100% - 15px);
        width: 2px;
        background: #0d6efd;
    }
</style>

